<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.bmicalcjavafx.BmiController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TextField fx:id="nameTextField" alignment="CENTER" maxHeight="20.0" maxWidth="300.0" promptText="Name"
               GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <font>
          <Font size="16.0"/>
        </font>
    </TextField>
    <TextField fx:id="weightTextField" alignment="CENTER" layoutX="160.0" layoutY="43.0" maxHeight="20.0"
               maxWidth="300.0" promptText="Weight" GridPane.halignment="CENTER" GridPane.rowIndex="2"
               GridPane.valignment="CENTER">
        <font>
          <Font size="16.0"/>
        </font>
    </TextField>
    <TextField fx:id="heightTextField" alignment="CENTER" layoutX="10.0" layoutY="43.0" maxHeight="20.0"
               maxWidth="300.0" promptText="Height (Cm)" GridPane.halignment="CENTER" GridPane.rowIndex="3"
               GridPane.valignment="CENTER">
        <font>
          <Font size="16.0"/>
        </font>
    </TextField>
    <Button fx:id="calcButton" mnemonicParsing="false" onAction="#onCalcButtonClick" text="Calculate BMI"
            GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
        <font>
          <Font size="19.0"/>
        </font>
    </Button>
    <Label fx:id="resultLabel" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="5"
           GridPane.valignment="CENTER">
        <font>
          <Font size="20.0"/>
        </font>
    </Label>
    <Label text="BMI Calculator" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <font>
          <Font size="22.0"/>
        </font>
        <GridPane.margin>
          <Insets/>
        </GridPane.margin>
    </Label>
</GridPane>
